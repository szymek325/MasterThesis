@model WebRazor.Models.People.PeopleViewModel
@{
    ViewData["Title"] = "People";
}

<button class="btn btn-success" onclick="location.href = '@Url.Action("NewPerson", "People")'">
    Create new Person
</button>

<h2>@ViewData["Title"]</h2>

<table class="table" *ngIf="requests">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.People)
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Name</td>
                <td><img src="data:image/jpeg;base64,@person.Thumbnail" /></td>
                <td class="btn btn-success" onclick="location.href = '@Url.Action("Person", "People", new {person.Id})'">
                    Show
                </td>

            </tr>
        }
    </tbody>
</table>