@model WebRazor.Models.People.NewPersonViewModel
@{
    ViewData["Title"] = "New Person";
}
<h2>@ViewData["Title"]</h2>

<div>
    @using (Html.BeginForm("Create", "People", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        <input class="btn btn-success" type="submit" value="Create Request"/>
        <div class="row">
            <div class="col-md-3">
                <label for="name">Name</label>
            </div>
            @Html.ValidationMessageFor(x => x.Name)
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Name)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="file">File</label>
            </div>
            @Html.ValidationMessageFor(x => x.Files)
            <div class="col-md-3">
                <div>
                    @Html.TextBoxFor(m => m.Files, new {type = "file", multiple = "multiple", @class = "input-file"})
                </div>
            </div>
        </div>
    }
</div>