@using DataLayer.Entities
@using Domain.NeuralNetwork.DTO
@model WebRazor.Models.Recognition.NewRecognitionViewModel
@{
    ViewData["Title"] = "New Recognition";
}

<h2>@ViewData["Title"]</h2>

<div>
    @using (Html.BeginForm("Create", "Recognition", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div>
            <input class="btn btn-success" type="submit" value="Create Request" />

        </div>
        <div class="row">
            <div class="col-md-3">
                <label for="name">Name</label>
            </div>
            @Html.ValidationMessageFor(x => x.Name)
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Name)
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="name">Neural Network</label>
            </div>
            <div class="col-md-3">
                @Html.DropDownListFor(m => m.NeuralNetworkId,@Model.NeuralNetworks,"Select Neural Network")
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="file">File</label>
            </div>
            @Html.ValidationMessageFor(x => x.File)
            <div class="col-md-3">
                <div>
                    @Html.TextBoxFor(m => m.File, new { type = "file", @class = "input-file" })
                </div>
            </div>
        </div>
    }
</div>