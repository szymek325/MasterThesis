@model WebRazor.Models.Readings.AllDatesViewModel

@{
    ViewBag.Title = "Readings";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>Day</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var day in Model.Dates)
    {
        <tr>
            <td>@day.Date</td>
            <td class="btn btn-success" onclick="location.href = '@Url.Action("DailyReadings", "Readings", new {day=day.Date})'">
                Show
            </td>

        </tr>
    }
    </tbody>
</table>
